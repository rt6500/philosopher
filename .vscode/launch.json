{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Philosopher",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/philo",  // Adjust if binary has another name
      "args": ["3", "100", "300", "300", "2"],     // Example args
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",       // Adjust path if different
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}

